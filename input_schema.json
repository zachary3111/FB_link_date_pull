{
  "title": "Input",
  "description": "Configure what to extract from Facebook posts.",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "mode": {
      "title": "Mode",
      "type": "string",
      "description": "What to extract: full post details or only the post's date/time.",
      "editor": "select",
      "default": "POST_DETAILS",
      "enum": [
        "POST_DETAILS",
        "POST_DATES"
      ],
      "enumTitles": [
        "Post details (author, text, counts, date)",
        "Post dates only"
      ]
    },
    "urls": {
      "title": "Post URLs",
      "type": "array",
      "description": "Array of Facebook post URLs to open (one per line).",
      "editor": "select",
      "items": {
        "type": "string",
        "enum": [
          "https://www.facebook.com/zuck/posts/10102577175875681",
          "https://www.facebook.com/somepage/posts/1234567890",
          "https://m.facebook.com/story.php?story_fbid=123&id=456"
        ],
        "enumTitles": [
          "Sample: Zuck post (example)",
          "Sample: Page post (example)",
          "Sample: m.facebook.com story (example)"
        ]
      },
      "default": []
    },
    "cookies": {
      "title": "Cookies",
      "type": "string",
      "description": "Either JSON array of cookies, JSON with {cookies:[...]}, or a raw Cookie header string.",
      "editor": "select",
      "enum": [
        "",
        "{\"cookies\":[{\"name\":\"c_user\",\"value\":\"123\"},{\"name\":\"xs\",\"value\":\"...\"}]}",
        "c_user=123; xs=...; datr=..."
      ],
      "enumTitles": [
        "Empty (no cookies)",
        "JSON object with cookies[]",
        "Raw Cookie header string"
      ]
    },
    "min_wait_ms": {
      "title": "Min wait (ms)",
      "type": "integer",
      "description": "Lower bound of randomized inter-action delay.",
      "default": 1200,
      "minimum": 0,
      "unit": "ms"
    },
    "max_wait_ms": {
      "title": "Max wait (ms)",
      "type": "integer",
      "description": "Upper bound of randomized inter-action delay.",
      "default": 2500,
      "minimum": 0,
      "unit": "ms"
    },
    "headless": {
      "title": "Headless",
      "type": "boolean",
      "description": "Run browser in headless mode (no visible window).",
      "default": true
    },
    "viewport": {
      "title": "Viewport",
      "type": "object",
      "description": "Browser viewport size.",
      "properties": {
        "width": {
          "title": "Width",
          "type": "integer",
          "description": "Viewport width in pixels.",
          "default": 1280,
          "minimum": 320
        },
        "height": {
          "title": "Height",
          "type": "integer",
          "description": "Viewport height in pixels.",
          "default": 900,
          "minimum": 320
        }
      },
      "default": {
        "width": 1280,
        "height": 900
      }
    },
    "userAgent": {
      "title": "User-Agent override",
      "type": "string",
      "description": "Optional User-Agent string to spoof."
    }
  },
  "required": [
    "urls"
  ]
}